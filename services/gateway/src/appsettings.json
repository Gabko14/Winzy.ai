{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000"
      }
    }
  },
  "Jwt": {
    "Secret": "CHANGE-THIS-IN-PRODUCTION-minimum-32-characters-long"
  },
  "Cors": {
    "Origins": [
      "http://localhost:8081"
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "AuthorizationPolicy": "authenticated",
        "RateLimiterPolicy": "auth",
        "Order": 2
      },
      "habits-public-route": {
        "ClusterId": "habit-cluster",
        "Match": {
          "Path": "/habits/public/{**catch-all}"
        },
        "RateLimiterPolicy": "default",
        "Order": 1
      },
      "habits-route": {
        "ClusterId": "habit-cluster",
        "Match": {
          "Path": "/habits/{**catch-all}"
        },
        "AuthorizationPolicy": "authenticated",
        "RateLimiterPolicy": "default",
        "Order": 2
      },
      "social-route": {
        "ClusterId": "social-cluster",
        "Match": {
          "Path": "/social/{**catch-all}"
        },
        "AuthorizationPolicy": "authenticated",
        "RateLimiterPolicy": "default"
      },
      "challenges-route": {
        "ClusterId": "challenge-cluster",
        "Match": {
          "Path": "/challenges/{**catch-all}"
        },
        "AuthorizationPolicy": "authenticated",
        "RateLimiterPolicy": "default"
      },
      "notifications-route": {
        "ClusterId": "notification-cluster",
        "Match": {
          "Path": "/notifications/{**catch-all}"
        },
        "AuthorizationPolicy": "authenticated",
        "RateLimiterPolicy": "default"
      },
      "activity-route": {
        "ClusterId": "activity-cluster",
        "Match": {
          "Path": "/activity/{**catch-all}"
        },
        "AuthorizationPolicy": "authenticated",
        "RateLimiterPolicy": "default"
      },
      "auth-register-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth/register",
          "Methods": [
            "POST"
          ]
        },
        "RateLimiterPolicy": "auth",
        "Order": 1
      },
      "auth-login-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth/login",
          "Methods": [
            "POST"
          ]
        },
        "RateLimiterPolicy": "auth",
        "Order": 1
      },
      "auth-refresh-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth/refresh",
          "Methods": [
            "POST"
          ]
        },
        "RateLimiterPolicy": "auth",
        "Order": 1
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://auth-service:5001"
          }
        }
      },
      "habit-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://habit-service:5002"
          }
        }
      },
      "social-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://social-service:5003"
          }
        }
      },
      "challenge-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://challenge-service:5004"
          }
        }
      },
      "notification-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://notification-service:5005"
          }
        }
      },
      "activity-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://activity-service:5006"
          }
        }
      }
    }
  }
}
